# Database (Neon PostgreSQL recommended for production)
# Neon provides automatic daily backups and point-in-time recovery (PITR) up to 7 days on Pro plan.
# Ensure PITR is enabled in the Neon dashboard: https://console.neon.tech
DATABASE_URL="postgresql://user:password@localhost:5432/forex_ea_builder?schema=public"

# NextAuth
AUTH_SECRET="generate-with-openssl-rand-base64-32"
AUTH_URL="http://localhost:3000"

# Optional: Trust host for production
AUTH_TRUST_HOST=true

# Google OAuth (https://console.cloud.google.com/apis/credentials)
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# GitHub OAuth (https://github.com/settings/developers)
AUTH_GITHUB_ID=""
AUTH_GITHUB_SECRET=""

# Resend (https://resend.com/api-keys)
RESEND_API_KEY=""
EMAIL_FROM="AlgoStudio <onboarding@resend.dev>"

# Stripe (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Stripe Price IDs (create in Stripe Dashboard > Products)
STRIPE_STARTER_MONTHLY_PRICE_ID=""
STRIPE_STARTER_YEARLY_PRICE_ID=""
STRIPE_PRO_MONTHLY_PRICE_ID=""
STRIPE_PRO_YEARLY_PRICE_ID=""

# Upstash Redis (for rate limiting in production)
# Get these from https://console.upstash.com after creating a Redis database
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Sentry (error monitoring - https://sentry.io)
SENTRY_DSN=""
